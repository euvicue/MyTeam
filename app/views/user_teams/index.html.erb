<html>
<title>Teams List
</title>
<body>
<h1>Teams List</h1>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>League</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><td><%= link_to team.league.name, league_path(team.league.id)%></td></td>
        <td><td><%= link_to 'See', team_path(team.id)%></td></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%= link_to 'Create team', new_team_path %>
</body>
</html>