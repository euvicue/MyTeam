<%= form_for [@match_day.league, @match_day], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>

    <%= f.label :deadline, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_local_field :deadline, :class => 'datetime_local_field' %>
    </div>

    <%= f.label :weekend_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_local_field :weekend_date, :class => 'datetime_local_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leagues_path, :class => 'btn' %>
  </div>
<% end %>
